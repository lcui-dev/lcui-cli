  },
  "dependencies": {
    "chalk": "^4.1.1",
    "change-case": "^4.1.2",
    "cli-progress": "^3.9.0",
    "commander": "^7.2.0",
    "decompress": "^4.2.1",
    "fs-extra": "^10.0.0",
    "got": "^11.8.2",
    "sass": "^1.32.12",
    "simple-git": "^3.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
